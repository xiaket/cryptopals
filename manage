#!/bin/bash

set -o errexit
set -o nounset
set -o pipefail


# define tasks here
get_current_job (){
  cat solutions/registry.go | grep Prob | tail -n 1 | sed "s/://g" | awk '{print $1}'
}

run () {
  current=$(get_current_job)
  go run Manager.go $current
}

test_ () {
  go run Manager.go test
}

less_ () {
  current=$(get_current_job)
  doc_name=`echo "$current" | sed "s/.go/.md/g;s/\.\//^/g;s/\//\/README./g;s/\^/\.\//g"`
  less $doc_name
}

# main start here
command=${1:-""}

if [ -n "$(type -t $command)" ] && [ "$(type -t $command)" = function ]
then
  eval $command
  exit $?
fi

case "$command" in
  l)
    less_;;
  test)
    test_;;
  *)
    run
esac
